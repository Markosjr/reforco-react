{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "Node",
    "target": "ES6",
    "outDir": "./dist/",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,    
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop":true,
    "noImplicitAny":false,
    "module": "ES6",           
    "jsx": "react",
    "lib":["es5", "es6", "dom"]                          
  },
  "include": ["./src/**/*", "./custom-modules.d.ts"]
}
